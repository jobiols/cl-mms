<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="factura_electronica_report_saleorder_document" inherit_id="sale.report_saleorder_document"
              name="factura_electronica_report_saleorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
                <t t-set="address">
                    <br/><!--FIXME-->
                    <div>
                        <b><span t-if="doc.partner_id.title" t-field="doc.partner_id.title"/> <span t-field="doc.partner_id.name"/></b><br/>
                        <span t-if="doc.partner_id.function" t-field="doc.partner_id.function"/><br/>
                        <span t-if="doc.partner_id.parent_id" t-field="doc.partner_id.parent_id.name"/>
                        <ul class="list-unstyled">
                            <li t-if="doc.partner_id.street">
                                <span t-field="doc.partner_id.street"/> <span t-if="doc.partner_id.city" t-field="doc.partner_id.city"/>  (<span t-if="doc.partner_id.zip" t-field="doc.partner_id.zip"/>)
                            </li>
                            <li t-if="doc.partner_id.state_id">
                                <span t-field="doc.partner_id.state_id.name"/> - <span t-if="doc.partner_id.country_id" t-field="doc.partner_id.country_id.name"/>
                            </li>
                        </ul>
                    </div>
                </t>
                <t t-if="doc.partner_shipping_id == doc.partner_invoice_id
                                     and doc.partner_invoice_id != doc.partner_id
                                     or doc.partner_shipping_id != doc.partner_invoice_id">
                    <t t-set="information_block">
                        <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Dirección de facturación y envío:</strong>
                        <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Dirección de facturación:</strong>
                        <div t-field="doc.partner_invoice_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                            <strong>Dirección de envío:</strong>
                            <div t-field="doc.partner_shipping_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </t>
                    </t>
                </t>
                <div class="page">
                    <div class="oe_structure"/>

                    <h2>
                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                            <span t-if="doc.state not in ['draft','sent']">Orden # </span>
                            <span t-if="doc.state in ['draft','sent']">Presupuesto # </span>
                        </t>
                        <t t-if="env.context.get('proforma', False) or is_pro_forma">
                            <span>Factura Pro-Forma # </span>
                        </t>
                        <span t-field="doc.name"/>
                    </h2>
                    <span>Documento no válido como factura</span>
                    <div class="row mt32 mb32" id="informations">
                        <div t-if="doc.client_order_ref" class="col-auto mw-100 mb-2">
                            <strong>Referencia:</strong>
                            <p class="m-0" t-field="doc.client_order_ref"/>
                        </div>
                        <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']" class="col-auto mw-100 mb-2">
                            <strong>Fecha Orden:</strong>
                            <p class="m-0" t-field="doc.confirmation_date"/>
                        </div>
                        <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto mw-100 mb-2">
                            <strong>Fecha Presupuesto:</strong>
                            <p class="m-0" t-field="doc.date_order"/>
                        </div>
                        <div t-if="doc.user_id.name" class="col-auto mw-100 mb-2">
                            <strong>Comercial:</strong>
                            <p class="m-0" t-field="doc.user_id"/>
                        </div>
                        <div t-if="doc.origin" class="col-auto mw-100 mb-2">
                            <strong>Documento Origen:</strong>
                            <p class="m-0" t-field="doc.origin"/>
                        </div>
                    </div>

                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <t t-set="colspan" t-value="5"/>
                                <th class="text-left">Descripción</th>
                                <th class="text-right">Cantidad</th>
                                <th class="text-right">Precio Unitario</th>
                                <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                    <span>Dcto.(%)</span>
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <th t-if="not doc.partner_id.property_account_position_id.no_discrimina_impuestos" class="text-right">Impuestos</th>
                                <th class="text-right">
                                    <t groups="account.group_show_line_subtotals_tax_excluded">Monto</t>
                                    <t groups="account.group_show_line_subtotals_tax_included">Total</t>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>

                            <t t-foreach="doc.order_line" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <!--
                                Total 171
                                Descripción 79 - 46%
                                Cantidad 15 - 9%
                                Precio Total 27 - 16%
                                Impuestos 23 - 13%
                                Monto 27 - 16%
                                -->

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td style='width: 46%'><span t-field="line.name"/></td>
                                        <td class="text-right" style='width: 9%'>
                                            <span t-field="line.product_uom_qty"/>
                                            <span t-field="line.product_uom" groups="uom.group_uom"/>
                                        </td>
                                        <td class="text-right" style='width: 16%'>
                                            <span t-if="not doc.partner_id.property_account_position_id.no_discrimina_impuestos" t-field="line.price_unit"/>
                                            <span t-else="" t-esc="line.price_unit + (line.price_tax / line.product_uom_qty)"
                                                  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>
                                        <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td t-if="not doc.partner_id.property_account_position_id.no_discrimina_impuestos"
                                            class="text-right" style='width: 13%'>
                                            <span t-if="not doc.partner_id.property_account_position_id.no_discrimina_impuestos"
                                                  t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                        </td>
                                        <td class="text-right o_price_total" style='width: 16%'>
                                            <span t-if="not doc.partner_id.property_account_position_id.no_discrimina_impuestos"
                                                  t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-else=""
                                                  t-esc="line.price_subtotal+line.price_tax"
                                                  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"
                                                  groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td t-att-colspan="colspan">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td t-att-colspan="colspan">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td t-att-colspan="colspan">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm">
                                    <tr t-if="not doc.partner_id.property_account_position_id.no_discrimina_impuestos" class="border-black o_subtotal" style="">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-if="not doc.partner_id.property_account_position_id.no_discrimina_impuestos" t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <t t-if="amount_by_group[3] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/></span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span t-esc="amount_by_group[1]"
                                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                </td>
                                            </t>
                                            <t t-else ="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span t-esc="amount_by_group[1]"
                                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div>
                        <table class="table table-sm o_main_table">
                            <tbody>
                                <tr t-if="doc.expediente_estado">
                                    <td>
                                        Nro. Expediente: <span t-field="doc.expediente_estado"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Forma de Pago: <span t-if="doc.payment_term_id.name"
                                                             t-field="doc.payment_term_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Moneda: <span t-field="doc.pricelist_id.currency_id.currency_unit_label"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td t-if="doc.validity_date and doc.state in ['draft', 'sent']">
                                        Validez: <span t-field="doc.validity_date"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Tiempo de Entrega: <span t-if="doc.tiempo_entrega"
                                                                 t-field="doc.tiempo_entrega"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <br/>
                    <span>
                        <b><p t-field="doc.note"/></b>
                        <p t-if="doc.user_id.company_id.firma_presidente"
                           t-field="doc.user_id.company_id.firma_presidente"/>
                    </span>
                    <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
                        <strong>Observaciones Posición Fiscal:</strong>
                        <span t-field="doc.fiscal_position_id.note"/>
                    </p>

                    <div t-if="doc.signature" class="mt32 ml16 mr16" name="signature">
                        <div class="offset-8">
                            <strong>Firma</strong>
                        </div>
                        <div class="offset-8">
                            <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="doc.signed_by"/>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
