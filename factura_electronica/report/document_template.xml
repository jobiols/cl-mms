<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="factura_electronica_external_layout_boxed" inherit_id="web.external_layout_boxed"
              name="factura_electronica_external_layout_boxed">
        <xpath expr="//div[@class='header']" position="replace">
            <div class="header">
                <div class="o_boxed_header" t-if="copia">
                    <h3 class="mt0 text-center"><t t-esc="copia"/></h3>
                </div>
                <div class="o_boxed_header">
                    <div class="row mb8">
                        <div class="col-4">
                            <img style="max-height: max-content;" t-if="company.logo" t-att-src="image_data_uri(company.logo)" width="300" height="162" alt="Logo"/>
                            <ul class="list-unstyled">
                                <li t-if="company.partner_id.vat">CUIT: <span t-esc="company.partner_id.vat"/></li>
                                <li t-if="company.partner_id.property_account_position_id.name">
                                    <span t-esc="company.partner_id.property_account_position_id.name"/>
                                </li>
                                <li t-if="company.partner_id.fecha_inicio_actividades">
                                    Inicio de Actividades: <span t-esc="company.partner_id.fecha_inicio_actividades"/>
                                </li>
                                <li t-if="company.partner_id.nro_iibb">
                                    Convenio Multilateral: <span t-esc="company.partner_id.nro_iibb"/>
                                </li>
                                <li t-if="company.partner_id.proveedor_estado">
                                    Nro. Proveedor Estado: <span t-esc="company.partner_id.proveedor_estado"/>
                                </li>
                            </ul>
                        </div>
                        <div style="margin-top: 6px;" class="col-4" align="center">
                            <table border="1" t-if="letra and tipo_comprobante">
                                <body>
                                    <tr>
                                        <td>
                                            <h2 class="mt0 text-center"><t t-esc="letra"/></h2>
                                            <t t-esc="tipo_comprobante"/>
                                        </td>
                                    </tr>
                                </body>
                            </table>
                        </div>
                        <div class="col-4 text-right mb4">
                            <h6 class="mt0 text-center" t-field="company.report_header"/>
                            <ul class="list-unstyled">
                                <li t-if="tipo_documento">
                                    <h4><span t-esc="tipo_documento"/></h4>
                                </li>
                                <li t-if="punto_venta">
                                    Punto de venta: <span t-esc="punto_venta"/>
                                </li>
                                <li t-if="numero_comprobante">
                                    Comp. Nro: <span t-esc="numero_comprobante"/>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//li[@t-if='company.vat']" position="replace" invisible="1"/>
        <xpath expr="//ul[@class='list-inline']" position="before">
            <div id="afip_cae" t-if="afip_auth_mode and afip_auth_code">
                <br/>
                <span>Establecimiento NÂ° 01-0730441-00 Sede de Timbrado 01</span>
                <br/>
                <img class="barcode"
                     style="padding: 0px; margin: 0px; height: 20px; width: 200px;"
                     t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;humanreadable=1' % ('I2of5', o.get_barcode())" alt="Codigo de barras"/>
                <br/>
                <span t-esc="afip_auth_mode"/>: <span t-esc="afip_auth_code"/> / Fecha vencimiento: <span t-esc="afip_auth_code_due"/>
            </div>
        </xpath>
        <xpath expr="//ul[@class='list-inline']" position="after" invisible="1">
            <ul class="list-unstyled">
                <li t-if="company.street">
                    <span t-field="company.street"/> <span t-if="company.city" t-field="company.city"/>  (<span t-if="company.zip" t-field="company.zip"/>)
                </li>
                <li t-if="company.state_id">
                    <span t-field="company.state_id.name"/> - <span t-if="company.country_id" t-field="company.country_id.name"/>
                </li>
            </ul>
        </xpath>
    </template>
</odoo>
