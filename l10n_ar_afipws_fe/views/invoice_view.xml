    <record id="view_invoice_form" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="name">account.invoice.afip.form</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <!-- we change button labels for better usability -->
            <field name="type" position="after">
                <field name="state" invisible="1"/>
                <field name="has_outstanding" invisible="1"/>
            </field>

            <notebook position="inside">
                <page string="AFIP" name="afip">
                    <group>
                        <field name="punto_venta_afip"/>
                        <field name="type"/>
                        <field name="document_type_internal_type"/>
                        <field name="invoice_number"/>
                        <field name="afip_concept"/>
                        <field name="document_type_id_code"/>
                        <field name="afip_tipo_documento_receptor"/>
                        <field name="date_invoice"/>
                    </group>

                    <group attrs="{'invisible': [('afip_concept', '=', '1')]}">
                        <field name="afip_service_start"/>
                        <field name="afip_service_end"/>
                    </group>

                    <button type="object" string="Calcular IVA" name="compute_argentina_amounts"/>
                    <group>
                        <field name="amount_total" string="ImpTotal"/>
                        <field name="impTotConc"/>
                        <field name="iva_impuestos_ids"/>
                        <field name="not_iva_tax_ids"/>
                        <field name="iva_base_imponible"/>
                        <field name="impNeto"/>
                        <field name="impOpEx"/>
                        <field name="impIVA"/>
                        <field name="impTrib"/>
                        <field name="currency_afip_code"/>
                        <field name="moneda_ctz"/>
                    </group>
                    <group>
                        <field name='afip_batch_number' invisible="1"/>
                        <!--                            <field name='validation_type' invisible="1"/>-->
                        <label for="afip_auth_code" string="AFIP authorization"/>
                        <div class="oe_inline">
                            <field name="afip_auth_mode" class="oe_inline"/>
                            <field name="afip_auth_code" class="oe_inline"
                                   attrs="{'required': [('afip_auth_mode', '!=', False)]}" placeholder="Code"/>
                            -
                            <field name="afip_auth_verify_result" class="oe_inline"/>
                            <button name="verify_on_afip" type="object"
                                    attrs="{'invisible': ['|', ('afip_auth_mode', '=', False),]}"
                                    string="Constatar" help="Constatar en AFIP" class="oe_inline oe_link"
                                    groups="base.group_user"/>
                        </div>
                        <field name='afip_auth_verify_observation'
                               attrs="{'invisible': [('afip_auth_verify_observation', '=', False)]}"/>
                        <field name='afip_auth_code_due'/>
                        <field name='afip_result'/>
                        <field name='afip_message'/>
                        <field name='afip_xml_request' groups="base.group_no_one"/>
                        <field name='afip_xml_response' groups="base.group_no_one"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

