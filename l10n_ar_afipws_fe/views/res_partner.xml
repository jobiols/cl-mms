<odoo>
    <data>
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">afipws_padron_validar_cuit</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <!-- <field name="inherit_id" ref="base.view_partner_form" /> -->
            <field name="model">res.partner</field>
            <field type="xml" name="arch">
                <field name="vat" position="after">
                    <field name="afip_tipo_documento" invisible="1"/>
                    <button type="object" name="consultar_estado_en_padron" string="Validar CUIT"
                            attrs="{'invisible': [('afip_tipo_documento', '!=', '80')]}"
                    />
                    <button type="object" name="syncro_afip_padron" string="Sincronizar con Padron"
                            attrs="{'invisible': [('afip_tipo_documento', '!=', '80')]}"
                    />
                </field>
            </field>
        </record>
    </data>
</odoo>